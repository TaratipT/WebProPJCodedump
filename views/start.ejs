<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UDEE room for rent</title>
    <link rel="stylesheet" href="/style/start.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chonburi&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>


<body style="background-color: #8CB9BD;">
    <div class="container m-4 text-center pt-2"
        style="background-color: #DAE7E7; border-radius: 8px; box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);width: 95%; max-width: 95%; height: 95vh; max-height: 95%;">
        <img src="/assets/apartment 1.svg" alt="apartment" draggable="false"
            style="position: absolute; right: 20px; bottom: 20px;">
        <div class="nav-con container-fluid d-flex align-items-center p-2"
            style="border-radius: 16px; background: #B6D2D5; box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25); width: 90%; max-width: 90%;">
            <img src="/assets/logo.svg" alt="logo" width="100" height="auto" style="border-radius: 32px;"
                draggable="false">
            <nav class="kuy-auto navbar ms-auto p-3">
                <!-- ปุ่มสำหรับเปิด Modal Login -->
                <button class="btn me-3 d-flex align-items-center" data-bs-toggle="modal" id="openModalBtn"
                    style="background: linear-gradient(90deg, #e2e2e2, #8CB9BD); border-radius: 8px; border-color: #ECB159;">Login
                    / Register<i class='bx bxs-exit'></i></button>
            </nav>
            <!-- Modal structure -->
            <div id="modal" class="modal">
                <div class="modal-content p-4">
                    <span id="closeModalBtn" class="close text-end">&times;</span>
                    <div class="container m-1">
                        <div class="form-box login">
                            <form action="/login" method="POST" id="loginForm">
                                <h1>Login</h1>
                                <div class="input-box">
                                    <input type="text" name="username" placeholder="Username/ชื่อผู้ใช้" required>
                                    <i class='bx bxs-user'></i>
                                </div>
                                <div class="input-box">
                                    <input type="password" name="password" placeholder="Password/รหัสผ่าน" required>
                                    <i class='bx bxs-lock-alt'></i>
                                </div>
                                <button type="submit" class="btn">Login</button>
                            </form>
                        </div>

                        <div class="form-box register">
                            <form action="/register" method="POST" id="registerForm">
                                <h1>Registration</h1>
                                <div class="input-box">
                                    <input type="text" name="firstName" placeholder="Name/ชื่อจริง" required>
                                </div>
                                <div class="input-box">
                                    <input type="text" name="lastName" placeholder="Surname/นามสกุล" required>
                                </div>
                                <div class="input-box">
                                    <input type="text" name="telephone" placeholder="Telephone Number/เบอร์โทร" required>
                                    <i class='bx bxs-phone-call'></i>
                                </div>
                                <div class="input-box">
                                    <input type="text" name="username" placeholder="Username/ชื่อผู้ใช้" required>
                                    <i class='bx bxs-user'></i>
                                </div>
                                <div class="input-box">
                                    <input type="email" name="email" placeholder="Email/อีเมล" required>
                                    <i class='bx bxs-envelope'></i>
                                </div>
                                <div class="input-box">
                                    <input type="password" name="password" placeholder="Password/รหัสผ่าน" required>
                                    <i class='bx bxs-lock-alt'></i>
                                </div>
                                <button type="submit" class="btn">Register</button>
                            </form>
                        </div>

                        <div class="toggle-box">
                            <div class="toggle-panel toggle-left">
                                <h1>Hello, Welcome!</h1>
                                <p>Don't have an account?</p>   
                                <button class="btn register-btn">Register</button>
                            </div>
                            <div class="toggle-panel toggle-right">
                                <h1>Welcome Back!</h1>
                                <p>Already have an account?</p>
                                <button class="btn login-btn">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text d-flex" style="position: absolute; top: 30%; left: 15%;background: linear-gradient(90deg, #74A3A7, #c4e1e4); border-radius:
50% 50% 79% 21% / 42% 62% 38% 58%">
            <p style="font: bold 48px 'Chonburi', sans-serif; color: #000;" class="m-3">ยินดีต้อนรับสู่</p>
            <p style="font: bold 48px 'Chonburi', sans-serif; color: #5a9ec9;" class="m-3">หอพักอยู่ดี</p>
        </div>
    </div>



    <!-- Bootstrap และ Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        crossorigin="anonymous"></script>


</body>
<script>
    const container = document.querySelector('.container');
    const registerBtn = document.querySelector('.register-btn');
    const loginBtn = document.querySelector('.login-btn');
    const modal = document.getElementById('modal');
    const openModalBtn = document.getElementById('openModalBtn');
    const closeModalBtn = document.getElementById('closeModalBtn');

    registerBtn.addEventListener('click', () => {
        container.classList.add('active');
    });

    loginBtn.addEventListener('click', () => {
        container.classList.remove('active');
    });

    openModalBtn.addEventListener('click', () => {
        modal.style.display = 'block';
    });

    closeModalBtn.addEventListener('click', () => {
        modal.style.display = 'none';
    });

    window.addEventListener('click', (event) => {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    });

    document.getElementById('registerForm').addEventListener('submit', function (event) {
        event.preventDefault();

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());

        fetch('/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
            .then(response => response.json())
            .then(result => {
                Swal.fire({
                    icon: result.status === 'success' ? 'success' : 'error',
                    title: result.message,
                }).then(() => {
                    if (result.status === 'success') {
                        window.location.href = "/";
                    }
                });
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'An error occurred. Please try again.',
                });
            });
    });

    document.getElementById('loginForm').addEventListener('submit', function (event) {
        event.preventDefault();

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());

        fetch('/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
            .then(response => response.json())
            .then(result => {
                Swal.fire({
                    icon: result.status === 'success' ? 'success' : 'error',
                    title: result.message,
                }).then(() => {
                    if (result.status === 'success') {
                        window.location.href = "/home";
                    }
                });
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'An error occurred. Please try again.',
                });
            });
    });
</script>

</html>