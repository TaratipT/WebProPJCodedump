<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ประวัติการติดต่อ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chonburi&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        h2 {
            text-align: center;
        }

        .contact-item {
            display: flex;
            align-items: stretch;
            margin-bottom: 15px;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .contact-item a {
            text-decoration: none;
            color: inherit;
            display: flex;
            width: 100%;
        }

        .status-bar {
            width: 30px;
            min-height: 100%;
        }

        .status-pending {
            background-color: #ff6666;
        }

        .status-resolved {
            background-color: #99ff99;
        }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            background-color: #ddeeff;
            padding: 10px;
        }

        .topic {
            background-color: #f0f8ff;
            padding: 10px;
        }

        .button-container {
            display: flex;
            justify-content: flex-end;
            padding-top: 20px;
        }

        .add-contact-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .add-contact-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container m-4 text-center pt-2"
        style="background-color: #DAE7E7; border-radius: 8px; box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);width: 95%; max-width: 95%; height: 95vh; max-height: 95%;">
        <img src="/assets/apartment 1.svg" alt="apartment" draggable="false"
            style="position: absolute; right: 20px; bottom: 20px;">
        <%- include('navbar.ejs') %>
            <div class="container mt-5">
                <h2>ประวัติการติดต่อ</h2>
                <% contacts.forEach(contact=> { %>
                    <div class="contact-item">
                        <a href="/tncontact/<%= contact.contact_id %>">
                            <div
                                class="status-bar <%= contact.status === 'pending' ? 'status-pending' : 'status-resolved' %>">
                            </div>
                            <div class="content">
                                <div class="header">
                                    <span>
                                        <%= contact.topic %>
                                    </span>
                                    <span>
                                        <%= new Date(contact.date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                                <div class="topic">
                                    <%= contact.description %>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>

                        <div class="button-container">
                            <a href="/tenantcontactform" class="add-contact-btn">+ ติดต่อใหม่</a>
                        </div>
            </div>
    </div>
    </div>
    </div>
    </div>
    </div>


</body>

</html>