<!-- history.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bill History</title>
    <link rel="stylesheet" href="/style/history.css">
</head>
<body>
    <h1>Bill History</h1>
    
    <% if (user) { %>
        <% if (user.username) { %>
            <!-- Tenant View -->
            <h2>Welcome, <%= user.firstName %> <%= user.lastName %></h2>
            <table>
                <thead>
                    <tr>
                        <th>Bill ID</th>
                        <th>Room ID</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% bills.forEach(function(bill) { %>
                        <tr>
                            <td><%= bill.bill_id %></td>
                            <td><%= bill.room_id %></td>
                            <td><%= bill.amount %></td>
                            <td><%= bill.due_date %></td>
                            <td><%= bill.status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else if (owner) { %>
            <!-- Owner View -->
            <h2>Welcome, Owner</h2>
            <table>
                <thead>
                    <tr>
                        <th>Bill ID</th>
                        <th>Room ID</th>
                        <th>Dormitory Name</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% bills.forEach(function(bill) { %>
                        <tr>
                            <td><%= bill.bill_id %></td>
                            <td><%= bill.room_id %></td>
                            <td><%= bill.dormitory_name %></td>
                            <td><%= bill.amount %></td>
                            <td><%= bill.due_date %></td>
                            <td><%= bill.status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    <% } else { %>
        <p>Please log in to view your bill history.</p>
    <% } %>
</body>
</html>
